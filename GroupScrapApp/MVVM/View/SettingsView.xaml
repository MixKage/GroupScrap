<UserControl x:Class="GroupScrapApp.MVVM.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GroupScrapApp.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <Button Content="Список группы"
                        Margin="0,20,0,0"
                        Background="#353340"
                        HorizontalAlignment="Center"
                        Command="{Binding OpenListFile}" />
                <Button Content="Список присутствующих"
                        Margin="0,20,0,0"
                        Background="#353340"
                        HorizontalAlignment="Center"
                        Command="{Binding OpenAddListFile}" />
                <Button Content="Список вариативности имён"
                        Margin="0,20,0,0"
                        Background="#353340"
                        HorizontalAlignment="Center"
                        Command="{Binding OpenVarListFile}" />
                <Button Content="Транслитный алфавит"
                        Margin="0,20,0,0"
                        Background="#353340"
                        HorizontalAlignment="Center"
                        Command="{Binding OpenTranslitListFile}" />
                <Button Content="Конфигурация движка"
                        Margin="0,20,0,0"
                        Background="#353340"
                        HorizontalAlignment="Center"
                        Command="{Binding OpenConfListFile}" />
            </StackPanel>
        </ScrollViewer>
        <TextBlock Text="Version 1.0"
                   Foreground="Wheat"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Padding="0,0,5,5" />
    </Grid>
</UserControl>
